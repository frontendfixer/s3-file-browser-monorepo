{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"extends": ["@repo/biome/config"],
	"files": {
		"includes": ["src/**/*"]
	},
	"linter": {
		"rules": {
			"a11y": {
				"useSemanticElements": "off",
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off",
				"useFocusableInteractive": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off",
				"noArrayIndexKey": "off"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
