{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "globals": ["process", "console", "window", "document"]
  },
  "organizeImports": {
    "enabled": true
  }
}

